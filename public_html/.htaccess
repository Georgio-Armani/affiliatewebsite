# Prevent directory listing
Options -Indexes

# Enable rewrite engine
RewriteEngine On

# Force HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Protect JSON files
<FilesMatch "\.(json)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Protect PHP files in api directory
<FilesMatch "^(?!index\.php$).*\.php$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Protect access to sensitive directories
RedirectMatch 403 ^/includes/?$
RedirectMatch 403 ^/cache/?$
RedirectMatch 403 ^/logs/?$
